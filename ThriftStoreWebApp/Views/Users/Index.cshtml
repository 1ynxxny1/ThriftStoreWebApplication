@model List<ApplicationUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
}

<h2 class="text-center mb-5">List of Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(user.FirstName + " " + user.LastName)</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @{
                        var roles = await UserManager.GetRolesAsync(user);
                        var rolesStr = String.Join(", ", roles);

                        string color = "bg-secondary";
                        if (roles.Contains("admin"))
                        {
                            color = "bg-dark";
                        }
                        else if (roles.Contains("seller"))
                        {
                            color = "bg-info text-dark";
                        }
                        else if (roles.Contains("client"))
                        {
                            color = "bg-warning text-dark";
                        }
                    }

                    <span class="badge rounded-pill @color">@rolesStr</span>
                </td>
                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-success btn-sm" asp-controller="Users" asp-action="Details"
                       asp-route-id="@user.Id">Details</a> <!-- Fixed the tag and href -->
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination d-flex justify-content-center mb-4">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            string activeClass = "";
            string linkClass = "page-link";

            if (i == ViewBag.PageIndex)
            {
                activeClass = "active";
                linkClass += " bg-success text-white"; 
            }

            <li class="page-item @activeClass">
                <a class="@linkClass"
                   asp-route-pageIndex="@i"
                   style="border-color:lightgray; color: @((i == ViewBag.PageIndex) ? "white" : "green");">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
